{
    "name": "laasti/valitron-provider",
    "description": "A league/container v2 service provider for vlucas/valitron.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Sonia Marquette",
            "email": "contact@nebulousweb.com",
            "homepage": "http://nebulousweb.com/",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/laasti/valitron-provider/issues",
        "wiki": "https://github.com/laasti/valitron-provider/wiki"
    },
    "require": {
        "php" : "~5.6|~7.0",
        "vlucas/valitron": "~1.0",
        "league/container": "^2.0.3"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Laasti\\ValitronProvider\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
